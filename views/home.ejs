<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>URL Shortener | Dashboard</title>
  <style>
    :root {
      --primary: #2b65ff;
      --primary-hover: #204ecf;
      --bg: #f5f7fb;
      --white: #fff;
      --text: #333;
      --border: #e5e7eb;
      --danger: #f44336;
      --danger-hover: #d32f2f;
    }

    body {
      margin: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: var(--bg);
      color: var(--text);
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 2rem;
    }

    header {
      width: 100%;
      max-width: 900px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2rem;
    }

    h1 {
      font-size: 1.8rem;
      color: var(--primary);
    }

    .user-info {
      font-size: 1rem;
      font-weight: 600;
    }

    .logout-btn {
      background: var(--danger);
      color: var(--white);
      border: none;
      padding: 0.6rem 1.2rem;
      border-radius: 8px;
      font-size: 0.95rem;
      font-weight: 600;
      cursor: pointer;
      transition: background 0.2s ease;
    }

    .logout-btn:hover {
      background: var(--danger-hover);
    }

    form {
      background: var(--white);
      padding: 1.5rem 2rem;
      border-radius: 12px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
      display: flex;
      flex-direction: column;
      gap: 1rem;
      width: 100%;
      max-width: 500px;
      margin-bottom: 2rem;
    }

    label {
      font-weight: 600;
    }

    input[type='text'] {
      padding: 0.8rem;
      border-radius: 8px;
      border: 1px solid var(--border);
      font-size: 1rem;
    }

    button {
      background: var(--primary);
      color: var(--white);
      padding: 0.8rem;
      border: none;
      border-radius: 8px;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      transition: background 0.2s ease;
    }

    button:hover {
      background: var(--primary-hover);
    }

    table {
      width: 100%;
      max-width: 900px;
      border-collapse: collapse;
      background: var(--white);
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
    }

    th,
    td {
      text-align: left;
      padding: 1rem;
      border-bottom: 1px solid var(--border);
    }

    th {
      background: var(--primary);
      color: var(--white);
      font-weight: 600;
    }

    tr:hover {
      background: #f9fafb;
    }

    .url-result {
      background: var(--white);
      padding: 1rem 1.5rem;
      border-radius: 10px;
      box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
      margin-bottom: 1.5rem;
      text-align: center;
    }

    .url-result a {
      color: var(--primary);
      text-decoration: none;
      font-weight: 600;
    }

    .url-result a:hover {
      text-decoration: underline;
    }
  </style>
</head>

<body>
  <header>
    <h1>URL Shortener</h1>
    <% if (user) { %>
      <div class="user-info">
        Welcome, <%= user.email %> (<%= user.role %>)
            <button class="logout-btn" onclick="window.location.href='/user/logout'">
              Logout
            </button>
      </div>
      <% } %>
  </header>
  <% if (newShortId) { %>
    <div class="url-result">
      <p>Short URL generated:</p>
      <input type="text" value="http://localhost:5000/url/<%= newShortId %>" id="short-url" readonly
        style="width:80%; padding:0.5rem; border-radius:6px; border:1px solid #ccc;" />
      <button type="button" onclick="copyShortURL()"
        style="padding:0.5rem 1rem; margin-left:0.5rem; border:none; background: var(--primary); color:white; border-radius:6px; cursor:pointer;">
        Copy
      </button>
    </div>

    <script>
      function copyShortURL() {
        const copyText = document.getElementById('short-url');
        copyText.select();
        copyText.setSelectionRange(0, 99999); // For mobile devices
        document.execCommand('copy');
        alert('Short URL copied: ' + copyText.value);
      }
    </script>
    <% } %>



      <form action="/url" method="post">
        <label for="url">Enter your original URL:</label>
        <input type="text" placeholder="https://www.example.com" name="url" id="url" required />
        <button type="submit">Generate Short URL</button>
      </form>

      <% if (urls && urls.length> 0) { %>
        <table
          style="width:100%; max-width:900px; border-collapse: separate; border-spacing:0; background: var(--white); border-radius: 12px; overflow:hidden; box-shadow: 0 6px 15px rgba(0,0,0,0.08);">
          <thead>
            <tr style="background: var(--primary); color: var(--white); text-align:left; font-weight:600;">
              <th style="padding:1rem;">#</th>
              <th style="padding:1rem;">Short ID</th>
              <th style="padding:1rem;">Redirect URL</th>
              <th style="padding:1rem;">Clicks</th>
              <th style="padding:1rem;">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% urls.forEach((url, index)=> { %>
              <tr style="transition: background 0.2s ease; cursor:default;"
                onmouseover="this.style.background='#f0f4ff'" onmouseout="this.style.background='transparent'">
                <td style="padding:0.8rem 1rem;">
                  <%= index + 1 %>
                </td>
                <td style="padding:0.8rem 1rem;">
                  <a href="/url/<%= url.shortId %>" target="_blank"
                    style="color: var(--primary); font-weight:600; text-decoration:none;">
                    <%= url.shortId %>
                  </a>
                </td>
                <td style="padding:0.8rem 1rem;">
                  <a href="<%= url.redirectURL %>" target="_blank"
                    style="color:#555; text-decoration:none; word-break:break-word;">
                    <%= url.redirectURL %>
                  </a>
                </td>
                <td style="padding:0.8rem 1rem; font-weight:500;">
                  <%= url.visitHistory.length %>
                </td>
                <td style="padding:0.8rem 1rem;">
                  <% if (user.role==='ADMIN' || url.createdBy.toString()===user._id.toString()) { %>
                    <button onclick="deleteURL(event, '<%= url.shortId %>')"
                      style="background: var(--danger); color:white; border:none; padding:0.4rem 0.8rem; border-radius:8px; font-weight:600; cursor:pointer; transition: background 0.2s ease;">
                      Delete
                    </button>
                    <% } %>

                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>

        <% } else { %>
          <p>No URLs created yet.</p>
          <% } %>
            <script>
              async function deleteURL(event, shortId) {
                if (!confirm('Are you sure you want to delete this URL?')) return;

                try {
                  const response = await fetch(`/url/delete/${shortId}`, { method: 'DELETE' });
                  const data = await response.json();

                  if (response.ok) {
                    alert('URL deleted successfully');
                    const row = event.target.closest('tr');
                    if (row) row.remove(); // removes the row without reloading
                  } else {
                    alert('Error: ' + data.error);
                  }
                } catch (err) {
                  console.error(err);
                  alert('Something went wrong!');
                }
              }
            </script>

</body>

</html>